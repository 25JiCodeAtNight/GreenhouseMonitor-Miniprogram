/* pages/knowledgeBase/column/column.wxss */

.page-body {
    width: 100%;
    margin-top: -20%;
}

.article {
    width: -20px;
    margin: 10px 30px 20px 30px;
    background-color: #CCCCCC;
    border-radius: 15px;
    box-shadow:2px 2px 5px #000;
}

.article-items {
    margin: 10px 10px 10px 10px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 15px 10px 15px 10px
}

.article-title {
    flex-basis: 100%;
    font-size: 24px;
    margin-bottom: 5px;
    word-break: break-all;
}

.article-intro {
    flex-basis: 100%;
    font-size: 18px;
    margin-left: 5px;
    word-break: break-all;
}